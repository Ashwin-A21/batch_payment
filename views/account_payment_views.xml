<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Payment Form View -->
    <record id="view_account_payment_form_inherit_batch" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.batch</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="batch_payment_id" readonly="1" invisible="not batch_payment_id"/>
                <field name="batch_payment_state" readonly="1" invisible="not batch_payment_id"/>
            </xpath>
        </field>
    </record>

    <!-- Extend Payment Tree View -->
    <record id="view_account_payment_tree_inherit_batch" model="ir.ui.view">
        <field name="name">account.payment.tree.inherit.batch</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="batch_payment_id" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Extend Payment Search View -->
    <record id="view_account_payment_search_inherit_batch" model="ir.ui.view">
        <field name="name">account.payment.search.inherit.batch</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator/>
                <filter string="In Batch" name="in_batch" domain="[('batch_payment_id', '!=', False)]"/>
                <filter string="Not in Batch" name="not_in_batch" domain="[('batch_payment_id', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Batch Payment" name="group_batch" context="{'group_by': 'batch_payment_id'}"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Action to create batch payment from payments -->
    <record id="action_payment_create_batch" model="ir.actions.server">
        <field name="name">Create Batch Payment</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_create_batch_payment()
        </field>
    </record>

    <!-- Action to remove from batch payment -->
    <record id="action_payment_remove_from_batch" model="ir.actions.server">
        <field name="name">Remove from Batch</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    records.action_remove_from_batch()
        </field>
    </record>
</odoo>